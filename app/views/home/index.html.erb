<div class='row'>
  <div class='col-sm-9'>
    <div class='jumbotron'>

      <h1>Welcome!</h1>
      <p>Register to get started.</p>
      <p>
        <%= link_to 'Register', user_signup_path, class: 'btn btn-primary btn-lg' %>
      </p>

    </div>
  </div>
  <div class='col-sm-3 home-login'>
    <%= form_for(:user, url: session_path(:user)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div><br />

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div> <br />

        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div> <br />

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>